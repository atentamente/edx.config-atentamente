#
# This file is created and updated by ansible, edit at your peril
#



upstream forum_app_server {
  server unix:/edx/var/forum/forum.sock fail_timeout=0;
}

server {

  server_name forum.*;
  listen 18080 ssl;
  client_max_body_size 1M;
  keepalive_timeout 5;


  ssl_certificate /etc/letsencrypt/live/educacion.atentamente.mx/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/educacion.atentamente.mx/privkey.pem;
  include /etc/letsencrypt/options-ssl-nginx.conf;
  ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

  location / {
    try_files $uri @proxy_to_app;
  }


location @proxy_to_app {
        proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Port $server_port;
    proxy_set_header X-Forwarded-For $remote_addr;

    # newrelic-specific header records the time when nginx handles a request.
    proxy_set_header X-Queue-Start "t=${msec}";

    proxy_set_header Host $http_host;

    proxy_redirect off;
    proxy_pass http://forum_app_server;
  }
}
